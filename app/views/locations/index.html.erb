<p id="notice"><%= notice %></p>

<div class="page-header"><h3>Stations List <small>Show / hide columns dynamically</small></h3></div>


<div class="panel panel-default">
    <div class="panel-heading">
        <a href="#" data-column="0" class="toggle-vis btn btn-default btn-sm">Tent Type</a>
        <a href="#" data-column="1" class="toggle-vis btn btn-default btn-sm">Completed</a>
        <a href="#" data-column="2" class="toggle-vis btn btn-default btn-sm">Location</a>

    </div>
    <div class="panel-body">

        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-responsive" id="toggleColumn-datatable">
            <thead>
    <tr>
      <th>Tent type</th>
      
      <th>Completed</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.tent_type %></td>
       
        <td><%= location.completed %></td>
       
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

